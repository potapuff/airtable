<script>
    let data =<%= MultiJson.dump(@units) %>;
    let select = $.map(data, function (obj) {
        obj.text = obj.UA;
        return obj;
    });

    function matchCustom(params, data) {
        if ($.trim(params.term) === '') {
            return data;
        }

        if (typeof data.text === 'undefined') {
            return null;
        }
        let upper = params.term.toUpperCase();
        if ((data.UA && data.UA.toUpperCase().indexOf(upper) > -1) ||
          (data.EN && data.EN.toUpperCase().indexOf(upper) > -1)) {
            let modifiedData = $.extend({}, data, true);
            return modifiedData;
        }

        return null;
    }

    function render(template, data) {
        let obj = document.getElementById(template).innerHTML;
        return  Mustache.render(obj, data);
    }

    $(document).ready(function () {
        $('#select').select2({
            data: select,
            placeholder: 'Оберіть Ваш навчальний заклад',
            allowClear: true,
            matcher: matchCustom,
            tags: true
        }).on('select2:select', function (e) {
            let value = e.params.data;
            let holder = document.getElementById('result');

            let has_url = value.URL && value.URL.indexOf("http") !== -1;
            let has_admin = value.admin;
            let has_domain = !!value.domain;
            holder.innerHTML = '';
            if (value.id  === value.text) {
                holder.innerHTML =  render('new-university', value);
            }  else {
                holder.innerHTML += render(has_url ?    'program' : 'new-program', value);
                holder.innerHTML += render(has_domain ? 'domain' : 'new-domain', value);
                holder.innerHTML += render(has_admin ?  'admin' : 'new-admin', value);
            }
            $(holder).find('form').on("submit", function(event) {
                event.preventDefault();
                let form = $(event.target);
                let value = form.serialize();
                form.html("Збереження...");
                jQuery.ajax({
                    type: "POST",
                    url: form.attr('action'),
                    data: value,
                    dataType: "html",
                    encode: true
                }).done(function( msg ) {
                    $( form ).html( msg );
                }).fail(function( jqXHR, textStatus ) {
                    $( form ).html( textStatus  );
                });
            });
        });

    });

</script>
