<script>
    let data =<%= MultiJson.dump(@unis) %>;
    let select = $.map(data, function (obj) {
        obj.text = obj.EN;
        return obj;
    });

    function matchCustom(params, data) {
        if ($.trim(params.term) === '') {
            return data;
        }

        if (typeof data.text === 'undefined') {
            return null;
        }
        let upper = params.term.toUpperCase();
        if ((data.UA && data.UA.toUpperCase().indexOf(upper) > -1) ||
          (data.EN && data.EN.toUpperCase().indexOf(upper) > -1)) {
            let modifiedData = $.extend({}, data, true);
            return modifiedData;
        }

        return null;
    }

    $(document).ready(function () {
        $('#select').select2({
            data: select,
            placeholder: 'Choose your institution',
            allowClear: true,
            matcher: matchCustom,
            tags: true
        }).on('select2:select', function (e) {
            let value = e.params.data;
            let variant;
            console.log(value)
            let has_url = value.URL && value.URL.indexOf("http") !== -1;
            let has_admin = value.admin;
            let has_domain = !!value.domain;

            if (value.id  === value.text) {
                //There is no University
                variant = 'new-university';
            }  else if (!has_url) {
                //There is UNI but no URL
                variant = 'new-program'
            }
            else if (has_admin && has_domain) {
                variant = 'ok';
            } else if (!has_admin) {
                variant = has_domain ? 'no-admin' : 'no-domain';
            }
            let template = document.getElementById(variant).innerHTML;
            document.getElementById('result').innerHTML = Mustache.render(template, value);
        });
    });
</script>
