        display: block;
    }
    input::placeholder {
        font-weight: bold;
        color: red !important;
    }
    input[type=checkbox],input[type=radio]
    {
        -ms-transform: scale(1.75);
        -moz-transform: scale(1.75);
        -webkit-transform: scale(1.75);
        -o-transform: scale(1.75);
        transform: scale(1.75);
        margin: 0.5rem;
    }
